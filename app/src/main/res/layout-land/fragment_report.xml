        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment2"
            android:name="com.phoenixgroup10.simplemoneytracer.fragment.ChartFragment"
            android:layout_width="350dp"
            android:layout_height="match_parent" />
